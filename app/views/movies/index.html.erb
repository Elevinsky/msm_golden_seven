<div class="page-header">
<h1>Movies </h1>
</div>

<a href="/movies/new_form" class="btn btn-primary">Add a New Movie</a>

<table class="table">
<thead>
<tr>
  <th>Image</th>
  <th>Title</th>
  <th>Year</th>
  <th>Duration</th>
  <th>Description</th>
  <th> </th>
</tr>
</thead>

<tbody>
<% @movies.each do |movie| %>
<tr>
  <td> <img src= "<%= movie.image_url%>" width="80"> </td>
  <td> <%= movie.title%> </td>
  <td> <%= movie.year%> </td>
  <td> <%= movie.duration%> </td>
  <td> <%= truncate(movie.description)%> </td>
  <td>
    <a href="/movies/<%= movie.id%>" class="btn btn-primary">detail</a>
    <a href="/movies/<%= movie.id%>/edit_form" class="btn btn-primary">edit</a>
    <a href="/movies/delete_movie/<%= movie.id%>" class="btn btn-primary">delete</a> </td>
</tr>
<% end %>
</tbody>
</table>
